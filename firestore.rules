rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read/write access to all collections and documents.
    // WARNING: This makes your database publicly accessible.
    // Anyone can read, write, and delete data.
    // This should only be used for open, public applications where
    // data security is not a concern.

    match /{document=**} {
      allow read, write: if true;
    }
  }
}
